<div class="uk-card uk-card-default uk-width-1-2@m uk-align-center uk-padding-small">
    <div class="uk-text-center uk-padding-medium">
    <h3 class="uk-text-danger">Forgot Password</h3>
    </div>
        <div class="uk-padding-small">
        <form class="uk-form-horizontal uk-margin-large" action="/forgot-password" method="POST">
            <div class="uk-margin">
                <label class="uk-form-label" for="form-stacked-text">Username:</label>
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input class="uk-input" type="text" name="username">
                </div>
            </div>
            <button class="uk-button uk-button-danger uk-align-center">Submit</button>
            {{#if errorMessage}}
            <div class="uk-alert-danger uk-width-1-2@m uk-align-center" uk-alert>
                <a class="uk-alert-close" uk-close></a>
            {{errorMessage}}
            </div>
            {{/if}}
        </form>
        </div>
</div>