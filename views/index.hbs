<div class="uk-container uk-container-medium uk-margin-medium">
    <div class="uk-margin-medium">
        <p class="uk-text-bold uk-text-center uk-text-lead uk-text-large uk-text-danger uk-margin-remove">Welcome to Food Hack</p>
        <p class="uk-text-bold uk-text-center uk-text-emphasis uk-margin-remove">A social place to find and share recipes!</p>
    </div>
    <div class="uk-grid-small uk-child-width-1-3@m uk-text-center" uk-grid>
    {{#each recipes}}
        <div class="uk-card-default uk-align-center uk-card-hover">
                <a href="/recipe/{{_id}}"><div class="uk-border-circle uk-margin-medium-top uk-align-center" style="background-image: url({{images.[0]}}); background-size: cover; width: 140px; height: 140px"></div></a>
            <div class="uk-align-center ">
                <a class="uk-text-decoration-none" href="/recipe/{{_id}}"> <h3 class="uk-card-title uk-margin-remove-top uk-text-break">{{name}}</h3></a>
            </div>
            <div class="uk-align-center">
                <p class="uk-text-meta uk-margin-remove-top">by <a class="uk-text-bold uk-text-danger" href="/user/{{_user.username}}">{{_user.username}}</a></p>
                <span class="uk-text-bold uk-align-center uk-text-warning uk-text-center uk-text-middle" uk-icon="star"> Rating: {{averageRating}} </span>
            </div>
            <div class="uk-card-footer uk-margin-small uk-padding-small uk-align-center">
                <a href="/recipe/{{_id}}" class="uk-button uk-button-text uk-text-middle">View</a>
            </div>
        </div>
    {{/each}}
    </div>
</div>