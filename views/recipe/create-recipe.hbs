<div class="uk-container uk-container-large">
    <form action="/recipe/:id">
        <fieldset class="uk-fieldset">
            <legend class="uk-legend">Create Recipe</legend>

        <div class="uk-margin">
            <input name= "name" class="uk-input" type="text" placeholder="Recipe name">
        </div>

        <div class="uk-margin">
            <textarea name= "name" class="uk-textarea" type="text" rows="5" placeholder="Description"></textarea>
        </div>

        <div class="uk-margin">
            <input name= "name" class="uk-input" type="text" placeholder="Ingredients">
        </div>

        <div class="uk-margin">
            <input name= "name" class="uk-input" type="text" placeholder="Cook time">
        </div>

        <div class="uk-margin">
            <input name= "name" class="uk-input" type="text" placeholder="Prep time">
        </div>

        <div class="uk-margin">
            <input name= "name" class="uk-input" type="text" placeholder="Total time">
        </div>

        <div class="uk-margin">
            <input name= "name" class="uk-input" type="text" placeholder="Servings">
        </div>

        <div class="uk-margin">
            <input name= "name" class="uk-input" type="text" placeholder="Country of origin">
        </div>

        <div class="uk-margin">
            <input name= "name" class="uk-input" type="text" placeholder="Meal type">
        </div>

        <div class="uk-margin">
            <input name= "name" class="uk-input" type="text" placeholder="Tags">
        </div>
        <button class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Submit</button>
        </fieldset>
    </form>
</div>